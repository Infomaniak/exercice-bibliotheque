{% extends 'base.html.twig' %}

{% block title %}Connexion{{ parent() }}{% endblock %}

{% block body %}
	<h1>Connexion</h1>

	<form action="{{ path('security_connection') }}" method="post">
		<div class="form-group">
			<label for="_username">Adresse email</label>
			<input placeholder="Adresse email..." required name="_username" type="text" class="form-control">
		</div>
		<div class="form-group">
			<label for="_password">Mot de passe</label>
			<input placeholder="Mot de passe..." required name="_password" type="password" class="form-control">
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-success">Connexion</button>
		</div>
	</form>
{% endblock %}
